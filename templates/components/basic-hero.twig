{% extends 'component.twig' %}

{% set name = 'basic-hero' %}
{% set container_element = 'div' %}
{% set container_aria_label = NULL %}


{% block content %}

  <div class='image-container'>
    {% include 'fields/image.twig' with {
      image: image
    } only %}
  </div>

  <div class='text-container'>
    {% include 'fields/page-title.twig' with {
      title: title
    } only %}

    {% if description is not empty %}
      {% include 'fields/description.twig' with {
        description: description
      } only %}
    {% endif %}

    {% if link.href is not empty and link.cta is not empty %}
      {% include 'fields/link.twig' with {
        href: link.href,
        cta: link.cta
      } only %}
    {% endif %}
  </div>

{% endblock %}